{
  "importMap": "./import_map.json",
  "compilerOptions": {
    "lib": ["deno.ns", "dom"]
  },
  "functions": {
    "verify_jwt": false
  },
  "lint": {
    "files": {
      "include": ["./*.ts"]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    }
  },
  "fmt": {
    "files": {
      "include": ["./*.ts"]
    },
    "options": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 4,
      "singleQuote": true
    }
  }
} 